@model PartnerUp.Models.MessagesViewModel
@{
    ViewBag.Title = "Messages";
}

<!-- slider Area Start-->
<div class="slider-area">
    <div class="single-slider hero-overly slider-height2 d-flex align-items-center" data-background="/img/dancers/backgroundDancers.jpg">
        <div class="container">
            <div class="row ">
                <div class="col-md-11 offset-xl-1 offset-lg-1 offset-md-1">
                    <div class="hero-caption">
                        <span>@Model.TitleMessages</span>
                        <h2>@Model.TitleMessages</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--slide Area End-->
<!--Start  Align Area-->
<div class="whole-wrap">
    <div class="container box_1170">
        <div class="section-top-border">
            <div class="row">

                    @{
                        if (Model.ListeContacts == null)
                        {
                            <div></div>
                        }
                        else
                        {
                            for (int i = 0; i < Model.ListeContacts.Count; i++)
                            {
                               
                                <div class="col-md-3">
                                    <img src="/img/dancers/@Model.ListeContacts[i].Image" alt="" class="img-fluid">
                                </div>
                                <div class="col-md-9 mt-sm-20">
                                    <form method="post">
                                        <select name="IdUserTo">

                                            <option value="@Model.ListeContacts[i].IdUserTo">@Model.ListeContacts[i].Nickname</option>

                                        </select>
                                        @*<input class="form-control valid" name="IdUserTo" id="name" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your nickname'" placeholder="@Model.ListeContacts[i].Nickname" value="@Model.ListeContacts[i].IdUserTo" disabled>*@
                                        <div class="room-btn pt-70">
                                            <button type="submit" value="SEND" class="btn view-btn1">Go to conversation<i class="ti-angle-right"></i> </button>
                                        </div>
                                    </form>
                                </div>

                            }

                        }

                    }
                
                </div>
            </div>
       </div>
</div>