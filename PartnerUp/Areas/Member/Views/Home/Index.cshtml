@model PartnerUp.Models.SearchViewModel
@{
    ViewBag.Title = "Home Page";
}

<main>

    <!-- slider Area Start-->
    <div class="slider-area ">
        <!-- Mobile Menu -->
        <div class="slider-active dot-style">
            <div class="single-slider  hero-overly slider-height d-flex align-items-center" data-background="/img/dancers/backgroundDancers.jpg">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <div class="col-xl-9">
                            <div class="h1-slider-caption">
                                <h1 data-animation="fadeInUp" data-delay=".4s">Find you dancer partner</h1>
                                <h3 data-animation="fadeInDown" data-delay=".4s">Partner Up</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="single-slider  hero-overly slider-height d-flex align-items-center" data-background="/img/dancers/backgroundDancers.jpg">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <div class="col-xl-9">
                            <div class="h1-slider-caption">
                                <h1 data-animation="fadeInUp" data-delay=".4s">Find you dancer partner</h1>
                                <h3 data-animation="fadeInDown" data-delay=".4s">Partner Up</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="single-slider  hero-overly slider-height d-flex align-items-center" data-background="/img/dancers/backgroundDancers.jpg">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <div class="col-xl-9">
                            <div class="h1-slider-caption">
                                <h1 data-animation="fadeInUp" data-delay=".4s">Find you dancer partner</h1>
                                <h3 data-animation="fadeInDown" data-delay=".4s">Partner Up</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider Area End-->
    <!-- Booking Room Start-->
    <div class="booking-area">
        <div class="container">
            <div class="row ">
                <div class="col-12">
                    <form action="" method="post">
                        <div class="booking-wrap d-flex justify-content-between align-items-center">
                            <!-- Single Select Box -->
                            <!--Dance-->
                            <div class="single-select-box mb-30">
                                <div class="boking-tittle">
                                    <span>@Model.FilterDance</span>
                                </div>
                                <div class="select-this">
                                    
                                        <div class="select-itms">
                                            <select name="DanceName">
                                                @foreach (PartnerUp.Models.DanceModel item in Model.DanceModel)
                                                {
                                                    <option value="@item.DanceName">@item.DanceName</option>
                                                }
                                            </select>
                                        </div>
                                   
                                </div>
                            </div>
                            <!-- Single Select Box -->
                            <!--Level-->
                            <div class="single-select-box mb-30">
                                <div class="boking-tittle">
                                    <span>@Model.FilterLevel</span>
                                </div>
                                <div class="select-this">
                                   
                                        <div class="select-itms">
                                            <select name="Level" >
                                                @foreach (PartnerUp.Models.LevelModel item in Model.LevelModel)
                                                {
                                                    <option value="@item.Level">@item.Level</option>
                                                }
                                            </select>
                                        </div>
                                    
                                </div>
                            </div>
                            <!-- Single Select Box -->
                            <!--Objective-->
                            <div class="single-select-box mb-30">
                                <div class="boking-tittle">
                                    <span>@Model.FilterObjective</span>
                                </div>
                                <div class="select-this">
                                    
                                        <div class="select-itms">
                                            <select name="Objective">
                                                @foreach (PartnerUp.Models.ObjectiveModel item in Model.ObjectiveModel)
                                                {
                                                    <option value="@item.Objective">@item.Objective</option>
                                                }
                                            </select>
                                        </div>
                                    
                                </div>
                            </div>
                            <!-- Single Select Box -->
                            <!--Role-->
                            <div class="single-select-box mb-30">
                                <div class="boking-tittle">
                                    <span>@Model.FilterRole</span>
                                </div>
                                <div class="select-this">
                                    
                                        <div class="select-itms">
                                            <select name="Role">
                                                @foreach (PartnerUp.Models.RoleModel item in Model.RoleModel)
                                                {
                                                    <option value="@item.Role">@item.Role</option>
                                                }
                                            </select>
                                        </div>
                                    
                                </div>
                            </div>
                            <!-- Single Select Box -->
                            <!--City-->
                            <div class="single-select-box mb-30">
                                <div class="boking-tittle">
                                    <span>@Model.FilterCity</span>
                                </div>
                                <div class="select-this">
                                   
                                        <div class="select-itms">
                                            <select name="City">
                                                @foreach (PartnerUp.Models.CityModel item in Model.CityModel)
                                                {
                                                    <option value="@item.City">@item.City</option>
                                                }
                                            </select>
                                        </div>
                                    
                                </div>
                            </div>
                            <!-- Single Select Box -->
                            <div class="single-select-box pt-45 mb-30">
                                <button type="submit" value="SEND" class="button button-contactForm boxed-btn">Search Now</button>
                            </div>


                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Booking Room End-->
    <!-- Room Start -->
    <section class="room-area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-8">
                    <!--font-back-tittle  -->
                    @*<div class="font-back-tittle mb-45">
                        <div class="archivment-front">
                            <h3>Our Rooms</h3>
                        </div>
                        <h3 class="archivment-back">Our Rooms</h3>
                    </div>*@
                </div>
            </div>
            <div class="row">
                @{
                    if (Model.ListeCartes == null)
                    {
                        <div></div>

                    }
                    else
                    {
                        for (int i = 0; i < Model.ListeCartes.Count; i++)
                        {
                            <div class="col-xl-4 col-lg-6 col-md-6">
                                <!-- Single Room -->
                                <div class="single-room mb-50">
                                    <div class="room-img">
                                        <a href="rooms.html"><img src="~/img/dancers/@Model.ListeCartes[i].Image" alt=""></a>
                                    </div>
                                    <div class="room-caption">
                                        <h3><a href="rooms.html">@Model.ListeCartes[i].Nickname</a></h3>
                                        <div class="per-night">
                                            <span>@Model.ListeCartes[i].DanceName</span>
                                        </div>
                                        <div class="per-night">
                                            <span>@Model.ListeCartes[i].Level</span>
                                        </div>
                                        <div class="per-night">
                                            <span>@Model.ListeCartes[i].Objective</span>
                                        </div>
                                        <div class="per-night">
                                            <span>@Model.ListeCartes[i].Role</span>
                                        </div>
                                        <div class="per-night">
                                            <span>@Model.ListeCartes[i].City</span>
                                        </div>
                                        <div class="per-night">
                                            <span>@Model.ListeCartes[i].Comment</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                }
                
            </div>
            <div class="row justify-content-center">
                <div class="room-btn pt-70">
                    <a href="#" class="btn view-btn1">View more  <i class="ti-angle-right"></i> </a>
                </div>
            </div>
        </div>

    </section>
    <!-- Room End -->
    <!-- Gallery img Start-->
    <div class="gallery-area fix">
        <div class="container-fluid p-0">
            <div class="row">
                <div class="col-md-12">
                    <div class="gallery-active owl-carousel">
                        <div class="gallery-img">
                            <a href="#"><img src="/img/gallery/gallery1.jpg" alt=""></a>
                        </div>
                        <div class="gallery-img">
                            <a href="#"><img src="/img/gallery/gallery2.jpg" alt=""></a>
                        </div>
                        <div class="gallery-img">
                            <a href="#"><img src="/img/gallery/gallery3.jpg" alt=""></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Gallery img End-->
</main>
